<FlowDocument x:Class="MathLib.Statistics.Analysis.CorrelationResultsDoc"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:MathLib.Statistics.Analysis">
    
	
	<FlowDocument.Resources>
		<Style x:Key="Heading1">
			<Setter Property="TextElement.FontSize" Value="18" />
		</Style>
		<Style x:Key="Heading2">
			<Setter Property="TextElement.FontSize" Value="14" />
		</Style>
	</FlowDocument.Resources>
	
	<Paragraph Style="{StaticResource Heading1}">Correlation Results</Paragraph>
	<Paragraph Style="{StaticResource Heading2}">Correlation Matrix</Paragraph>
	<Table DataContext="{Binding Path=Correlations}">
		<Table.Resources>
			<DataTemplate DataType="{x:Type local:CorrelationCollection}">
				<StackPanel Orientation="Horizontal">
					<TextBlock FontWeight="Bold">Name:</TextBlock>
					<TextBlock Text="{Binding Name}" Margin="2,0,10,0" />
					<TextBlock FontWeight="Bold">Date of birth:</TextBlock>
					<TextBlock Text="{Binding DateOfBirth}" Margin="2,0,10,0" />
				</StackPanel>
			</DataTemplate>
		</Table.Resources>
			<TableRowGroup>
			<TableRowGroup.Rows>
			</TableRowGroup.Rows>
		</TableRowGroup>
	</Table>

</FlowDocument>
