<UserControl x:Class="Stats.Shells.Wpf.Controls.DataMatrixGrid"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="clr-namespace:Microsoft.Windows.Controls;assembly=WPFToolkit"
    xmlns:Stats.Core.Data="clr-namespace:Stats.Core.Data;assembly=Stats.Core"
    >
    <c:DataGrid
        AutoGenerateColumns="False"
        ItemsSource="{Binding Path=Records, Mode=OneWay}"
        x:Name="DataGrid"
        HeadersVisibility="All"
        VerticalAlignment="Stretch"
        HorizontalAlignment="Stretch">
    </c:DataGrid>
</UserControl>
